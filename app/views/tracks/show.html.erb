<h2><%= @track.title %></h2>

<%= ugly_lyrics(@track.lyrics) %>

<p><%= @track.description %></p>

<div><%= link_to "Create New Track", new_album_track_url(@track.album) %></div>
<%= link_to "Edit", edit_track_url%>
<%= button_to "Delete", track_url(@track), method: :delete%>
<%= link_to "All Albums by #{@track.album.title}", album_url(@track.album)%>
<%= link_to "New Track", new_album_track_url(@track.album) %>


<%= render "notes/form", track: @track %>

<% @track.notes.each do |note| %>
  <%= render "notes/note", note: note %>
<% end %>
